@*Utils Index*@

@section styles{
    @*@Styles.Render("~/Content/utils")*@
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Roadwire Utilities", "Index", "Utils", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Utils", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Map", "Map", "Utils", new { area = "" }, null)</li>
                <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
            </ul>
        </div>
    </div>
</div>

<div id="utils-container" class="utils-container" ng-app="utils" ng-controller="UtilsCtrl">
    <div ng-view id="utils-view" class="utils-view">
        Ng View
    </div>
    <footer class="utils-footer">
        &copy; @DateTime.Now.Year - Roadwire LLC
    </footer>
</div>

@section scripts{
    @Scripts.Render("~/bundles/angular")
    @*@Scripts.Render("~/bundles/utils")*@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBvV2XB3ToYVHeUNMbTrr2Otq7ngt5pHD8&sensor=true&libraries=geometry"> </script>
}
