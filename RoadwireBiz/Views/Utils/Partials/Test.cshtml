<style>

    html, body, #app-container, #page-view {
        margin:0;
        height:100%;
        min-height:100%;
    }

    body {
        margin-left: 10px;
        margin-right: 5px;
    }

    #page-view {
        margin:0;
        display: flex;
        flex-direction: column;
    }
    .flex-col {
        display: flex;
        flex-direction: column;
    }
    .flex-head {
        flex: 0 0 auto;
        /*border: 5px solid red;*/
    }
    .flex-body {
        flex: 1;
        /*overflow-y: scroll;*/
        /*border: 5px solid blue;*/
    }
    .flex-foot {
        flex: 0 0 auto;
    }
    .futer {
        padding: 5px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); 
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); 
    }

    .box {
        /* flexbox setup */
        display: -webkit-box;
        display: -moz-box;
        display: box;
    }
    
    .box-horz {
        -webkit-box-orient: horizontal;
        -moz-box-orient: horizontal;
        box-orient: horizontal;
    }

    .box-stretch {
        box-align: stretch;
        -webkit-box-align: stretch;
        -moz-box-align: stretch;
        -webkit-flex-align: stretch;
    }

    .hscrl {
        overflow-x: scroll;  
    }
    .vscrl {
        overflow-y: scroll;
    }


    .form-control {
        display: inline-block;
        width: 80px; 
        /*height: 31px;*/
        padding: 2px 6px;
        border: 1px solid #cccccc;
        /* border-radius: 0; */
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    }

    .prod-name {
        font-weight: bold;
        width: 120px;
    }

    .btn-input {
        vertical-align: baseline;
        margin-left: -4px;
        padding-left: 2px;
        padding-right: 2px;
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
        background-color: rgb(221, 221, 221);
    }
    .btn-input:hover {
        background-color: #f18080;
    }

    input[type="number"] {
        max-width: 60px;
    }

    .box > div {
        margin: 0 10px 0 0;
    }

    .prod-box {
        border: 1px solid #cccccc;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        border-radius: 4px;
        padding: 5px;
        min-width: 170px;
    }

    .prod-box  li {
        margin: 0 0 5px 0;
    }

    .results-tbl {
        padding: 1px;
        border: 1px solid #e3e3e3;
        border-radius: 1px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); 
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05); 
    }
    .table {
        width: auto;
    }

</style>


<div class="flex-head">
    <h3>Products</h3>
    <div class="box box-horz hscrl">
        <div class="prod-box" ng-repeat="set in sets">
            <div><label><input type="checkbox" ng-model="set.hidden"> Hidden</label></div>
            <input class="form-control prod-name" ng-model="set.name" />
            <button class="btn btn-input" title="Remove Product" ng-click="delSet($index)"><span class=" glyphicon glyphicon-remove"></span></button>

            <h5 ng-show="set.options.length > 1">Options</h5>
            <ul class="list-unstyled">
                <li ng-repeat="opt in set.options">
                    <input class="form-control input-sm" ng-model="opt.name" ng-show="set.options.length > 1" />
                    <strong>$</strong>
                    <input type="number" class="form-control input-sm" ng-model="opt.price" />
                    <button class="btn btn-sm btn-input" title="Remove Option" ng-click="set.delOpt($index)" ng-show="set.options.length > 1">
                        <span class=" glyphicon glyphicon-remove"></span>
                    </button>


                </li>
            </ul>

            <div>
                <button class="btn btn-default" title="Add Option" ng-click="set.addOpt()">
                    <span class="glyphicon glyphicon-plus"></span> Add Option
                </button>
            </div>

        </div>

        <div>
            <button class="btn btn-default" title="Add Product" ng-click="newSet($index)">
                <span class="glyphicon glyphicon-plus"></span> Add Product
            </button>
        </div>

    </div>
</div>
<div class="flex-head">
            <button class="btn btn-default btn-calc" ng-click="calcResults()">
                <span class="glyphicon glyphicon-refresh"></span> Calculate
            </button>
</div>
<div class="flex-body box box-stretch">

    <div class="flex-col">
        <div class="flex-head"><h3>Hidden Pages</h3></div>
        <div class="results-tbl flex-body vscrl">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th ng-repeat="set in hidSets">
                            {{set.name}}
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="row in hidPages">
                        <td>
                            {{$index}}
                        </td>
                        <td ng-repeat="opt in row.opts track by $index">
                            {{opt.name}}
                        </td>
                        <td>
                            {{row.price | currency}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex-foot futer">
            Total Hidden Pages: {{hidPages.length}}
        </div>
    </div>

    <div class="flex-col">
        <div class="flex-head"><h3>Regular Pages</h3></div>
        <div class="results-tbl flex-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Product
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="set in regSets">
                        <td>
                            {{$index}}
                        </td>
                        <td ng-repeat="opt in row.opts track by $index">
                            {{opt.name}}
                        </td>
                        <td>
                            {{row.price | currency}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex-foot futer">
            Total Regular Pages: {{regSets.length}}
        </div>
    </div>
</div>
<div class="flex-foot futer">
    
</div>
