<div id="products">
    <h4>Products</h4>
    <div id="prod-row">
        <div class="prod-item">
            <div class="prod-descr">
                <input class="prod-name" title="Delete Product" ng-model="set.name" />
                <button class="del-btn"><span></span></button>
            </div>
            <div><label><input type="checkbox" ng-model="set.hidden"> Hidden</label></div>
            <h5>Options</h5>            

            <ul class="list-unstyled">
                <li >
                    <input class="form-control input-sm frm-ctrl" ng-model="opt.name">
                    <span class="symbol"></span>
                    <input type="number" class="form-control input-sm frm-ctrl" ng-model="opt.price">
                    <button class="del-btn"><span></span></button>
                </li>
            </ul>
            <div>
                <button class="btn btn-default" title="Add Option" ng-click="set.addOpt()">
                    <span class="glyphicon glyphicon-plus"></span> Add Option
                </button>
            </div>

        </div>
        <div class="prod-item">
            <div>c</div>
            <div>c</div>
        </div>
        <div>
            <button class="btn btn-default" title="Add Product" ng-click="newSet($index)">
                <span class="glyphicon glyphicon-plus"></span> Add Product
            </button>
        </div>
    </div>
</div>
<div id="calculate">
    <div>
        <button class="btn btn-default btn-calc" ng-click="calcResults()">
            <span class="glyphicon glyphicon-refresh"></span> Calculate
        </button>
    </div>
    <div>
        <h4>
            <span>Total Pages: </span>
            {{hidPages.length + regPages.length}}
        </h4>
    </div>

</div>
